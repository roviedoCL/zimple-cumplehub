# ============================================
# Zimple CumpleHub - Environment Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1
APP_NAME=Zimple CumpleHub
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cumplehub
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_SCHEMA=shared
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=cumplehub:
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=zimple-cumplehub
JWT_AUDIENCE=zimple-cumplehub-api

# Encryption (64 hex characters = 32 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# File Storage (AWS S3 or MinIO)
STORAGE_TYPE=s3
STORAGE_ENDPOINT=s3.amazonaws.com
STORAGE_REGION=us-east-1
STORAGE_BUCKET=cumplehub-uploads
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_USE_SSL=true

# Email (SMTP or SendGrid)
EMAIL_PROVIDER=smtp
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_FROM=noreply@cumplehub.cl
EMAIL_FROM_NAME=Zimple CumpleHub

# WhatsApp Business API
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Feature Flags
FEATURE_AI_ANALYTICS=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_INTEGRATIONS=true
FEATURE_WHATSAPP_CHANNEL=false

# External Integrations
INTEGRATION_BUK_ENABLED=false
INTEGRATION_BUK_API_URL=
INTEGRATION_TALANA_ENABLED=false
INTEGRATION_TALANA_API_URL=

# Compliance & Legal
DEFAULT_SLA_DAYS=30
PSYCHOLOGICAL_SUPPORT_ENABLED=true
ANONYMOUS_COMPLAINTS_ENABLED=true

# Development Only
DEBUG_MODE=false
SWAGGER_ENABLED=true
